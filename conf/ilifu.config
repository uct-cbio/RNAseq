/*
 * -------------------------------------------------
 *  ILIFU cluster config file (Tychus Assembly module)
 * -------------------------------------------------
 * http://www.ilifu.ac.za/
 */

singularity {
   enabled = true
   cacheDir = "/ceph/cbio/users/katie/singularity_containers/" 
}

process {
   container = "/ceph/cbio/users/katie/singularity_containers/nfcore-rnaseq-1.3.img"
   executor = 'slurm'
   stageInMode = 'symlink'
   stageOutMode = 'rsync'
   queue = 'Main' 
   // Increasing maxRetries, this will overwrite what we have in base.config
   maxRetries = 4
}

executor {
   queueSize = 10
}

params {
   igenomes_base = '/ceph/cbio/dbs/rna-seq/references'
   	max_memory = 256.GB
   	max_cpus = 64
   	max_time = 1000.h
}

